<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" maxHeight="700.0" maxWidth="450.0" minHeight="700.0" minWidth="450.0" prefHeight="700.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.ui.FindingStatsController">
   <children>
      <Label text="Statistics">
         <font>
            <Font size="40.0" />
         </font>
      </Label>
      <HBox alignment="CENTER" maxHeight="100.0" maxWidth="450.0" minHeight="100.0" minWidth="450.0" prefHeight="100.0" prefWidth="450.0">
         <children>
            <VBox alignment="CENTER" maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" prefHeight="100.0" prefWidth="100.0">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
               <children>
                  <Label fx:id="gamesPlayed" alignment="CENTER" maxHeight="40.0" maxWidth="100.0" minHeight="40.0" minWidth="100.0" prefHeight="40.0" prefWidth="100.0" text="Label" textAlignment="CENTER">
                     <font>
                        <Font size="30.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Played">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
            <VBox alignment="CENTER" maxHeight="100.0" maxWidth="100.0" minHeight="100.0" minWidth="100.0" prefHeight="100.0" prefWidth="100.0">
               <children>
                  <Label fx:id="winRate" alignment="CENTER" maxHeight="40.0" maxWidth="100.0" minHeight="40.0" minWidth="100.0" prefHeight="40.0" prefWidth="100.0" text="Label" textAlignment="CENTER">
                     <font>
                        <Font size="30.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" />
                     </VBox.margin>
                  </Label>
                  <Label text="Win rate">
                     <font>
                        <Font size="15.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets left="30.0" right="30.0" />
         </padding>
      </HBox>
      <StackPane maxHeight="400.0" maxWidth="450.0" minHeight="400.0" minWidth="450.0" prefHeight="400.0" prefWidth="450.0">
         <children>
            <BarChart fx:id="barchart" animated="false" horizontalGridLinesVisible="false" legendVisible="false" maxHeight="450.0" maxWidth="450.0" minHeight="450.0" minWidth="450.0" prefHeight="450.0" prefWidth="450.0" titleSide="BOTTOM" verticalGridLinesVisible="false">
               <xAxis>
                  <NumberAxis label="xAxis" tickLabelsVisible="false" tickMarkVisible="false" fx:id="xAxis" />
               </xAxis>
               <yAxis>
                  <CategoryAxis fx:id="yAxis" side="LEFT" />
               </yAxis>
            </BarChart>
         </children>
      </StackPane>
      <Button mnemonicParsing="false" onMouseClicked="#close" text="Close">
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
      </Button>
   </children>
</VBox>
