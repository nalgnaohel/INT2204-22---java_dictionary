<AnchorPane fx:id="gameArea" maxHeight="700.0" maxWidth="900.0" minHeight="700.0" minWidth="900.0" onKeyPressed="#handleKeyPressed" prefHeight="700.0" prefWidth="900.0" stylesheets="@../css/wordle.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dictionary.ui.game.wordles.WordleController">
   <children>
      <VBox layoutX="200.0" maxHeight="700.0" maxWidth="900.0" minHeight="700.0" minWidth="900.0" prefHeight="700.0" prefWidth="900.0">
         <children>
            <HBox layoutX="200.0" maxHeight="80.0" maxWidth="700.0" minHeight="80.0" minWidth="700.0" prefHeight="80.0" prefWidth="700.0">
               <children>
                  <Button fx:id="restartButton" mnemonicParsing="false" onMouseClicked="#restart" prefHeight="60.0" prefWidth="60.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="50.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <graphic>
                        <ImageView fitHeight="50.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icon/restart.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="infoButton" mnemonicParsing="false" onMouseClicked="#showHelp" prefHeight="60.0" prefWidth="60.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icon/info.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Button fx:id="statsButton" mnemonicParsing="false" onMouseClicked="#showStats" prefHeight="60.0" prefWidth="60.0">
                     <HBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                     </HBox.margin>
                     <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../icon/stats.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
               </children>
            </HBox>
            <TilePane fx:id="wordsTilePane" hgap="10.0" maxHeight="370.0" maxWidth="410.0" minHeight="370.0" minWidth="410.0" prefHeight="370.0" prefTileHeight="60.0" prefTileWidth="60.0" prefWidth="410.0" stylesheets="@../css/wordle.css" vgap="10.0">
               <padding>
                  <Insets bottom="10.0" left="30.0" right="30.0" top="10.0" />
               </padding>
            </TilePane>
            <FlowPane fx:id="virtualKeyboard" alignment="TOP_CENTER" columnHalignment="CENTER" hgap="5.0" maxHeight="280.0" maxWidth="400.0" minHeight="280.0" minWidth="400.0" prefHeight="280.0" prefWidth="400.0" prefWrapLength="300.0" vgap="8.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
